<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <nav class="sidebar-sticky">
        <ul class="nav flex-column">
          <h4 class="mt-5">球場一覧</h4>
           <% @ballparks.each do |ballpark| %>
            <li class="nav-item mt-3">
              <%= link_to ballpark.name, reviews_path(ballpark_id: ballpark.id) %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>

    <div class="col-md-10">
  <h3 class="mt-5">球場飯一覧</h3>
  <%= link_to "球場飯を投稿する", new_review_path, class: "btn btn-primary mb-3 mt-3" %>
  <div class="row">
    <% @reviews.each do |review| %>
    <div class="col-md-4 mb-4">
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <div class="text-center">
            <% if review.image.attached? %>
              <%= link_to(image_tag(review.image, size: "200x200"), review_path(review)) %>
            <% else %>
              <%= link_to(image_tag('no_image', size: "200x200"), review_path(review)) %>
            <% end %>
          </div>
          <div style="margin-bottom: 10px;"><strong>球場名:</strong> <%= review.ballpark.name %></div>
          <div style="margin-bottom: 10px;"><strong>商品名:</strong> <%= review.name %></div>
          <div style="margin-bottom: 10px;"><strong>価格:</strong> <%= number_with_delimiter(review.price) %>円</div>
          <div style="margin-bottom: 10px;"><strong>評価:</strong> <%= star_rating(review.rating) %></div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


    </div>
  </div>
