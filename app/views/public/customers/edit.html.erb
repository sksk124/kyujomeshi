<div class="container">
  <h3>会員編集</h3>

  <%= form_with(model: @customer, url: customer_path(@customer), method: :patch) do |f| %>
    <div class="form-group">
      <%= f.label :姓 %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :名 %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :姓カナ %>
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :名カナ %>
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :ニックネーム %>
      <%= f.text_field :nick_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :Email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
