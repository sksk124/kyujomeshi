<div class="container">
  <div class="mt-5 mb-4 text-center">
    <h3 class="font-weight-bold">会員情報編集画面</h3>
  </div>

  <%= form_with(model: @customer, url: customer_path(@customer), method: :patch) do |f| %>
    <div class="row justify-content-center mb-3">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :姓 %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :名 %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mb-3">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :姓カナ %>
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :名カナ %>
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mb-3">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :ニックネーム %>
          <%= f.text_field :nick_name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :Email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mb-5">
      <div class="col-md-4 text-md-right">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
      <div class="col-md-4 text-md-left">
        <%= link_to "会員を退会する", customers_unsubscribe_path, class: "btn btn-danger ml-2" %>
      </div>
    </div>
  <% end %>
</div>
