<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-3">
            <nav class="sidebar-sticky">
                <ul class="nav flex-column">
                    <h4 class="mt-5"><strong>球場一覧</strong></h4>
                    <% @ballparks.each do |ballpark| %>
                    <li class="nav-item mt-3">
                        <%= link_to ballpark.name, reviews_path(ballpark_id: ballpark.id) %>
                    </li>
                    <% end %>
                </ul>
            </nav>
        </div>

        <style>
            .review-item {
                margin - bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #ccc;
      }
        </style>

        <div class="col-md-9">
            <h3 class="mt-5">
                <strong><%= link_to "球場飯一覧", reviews_path, style: "color: black;", data: { nickname: nil } %></strong>
            </h3>


            <div class="row">
                <% @reviews.each do |review| %>
                <div class="col-md-12 mb-5 review-item">
                    <div class="row">
                        <div class="col-md-4">
                            <% if review.image.attached? %>
                            <%= link_to(image_tag(review.image, size: "200x200"), review_path(review), class: "d-block") %>
                            <% else %>
                            <%= link_to(image_tag('no_image', size: "200x200"), review_path(review), class: "d-block") %>
                            <% end %>
                        </div>
                        <div class="col-md-8">
                            <div>
                                <%= link_to review_path(review) do %>
                                <span class="font-weight-bold" style="font-size: 1.5rem;"><%= review.name %></span>
                                <% end %>
                            </div>
                            <div class="mt-3">
                                <strong>投稿者:</strong>
                                <%= link_to "#{review.customer.nick_name}さん", reviews_path(customer_id: review.customer.id) %>
                            </div>
                            <div class="mt-3">
                                <strong>球場名:</strong> <span class="font-weight-bold"><%= review.ballpark.name %></span>
                            </div>
                            <div class="mt-3">
                                <strong>価格:</strong> <span class="font-weight-bold"><%= number_with_delimiter(review.price) %>円</span>
                            </div>
                            <div class="mt-3">
                                <strong>評価:</strong> <span class="font-weight-bold mb"><%= star_rating(review.rating) %></span>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>


    </div>
</div>