<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <h3 class="font-weight-bold mt-4 mb-4">会員情報</h3>
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <th scope="row">会員ID</th>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <th scope="row">氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <th scope="row">フリガナ</th>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th scope="row">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <th scope="row">ニックネーム</th>
              <td><%= @customer.nick_name %></td>
            </tr>
            <tr>
              <th scope="row">退会ステータス</th>
              <td><%= @customer.is_deleted ? '退会済み' : '有効' %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="mt-4 mb-4">
        <%= link_to "会員情報編集", edit_admin_customer_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
