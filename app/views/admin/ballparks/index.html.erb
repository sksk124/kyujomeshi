<h3>球場名一覧・新規登録</h3>

 <%= form_with model: @ballpark, url: admin_ballparks_path do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
   </div>
   <%= f.submit '登録', class: "btn btn-primary" %>
  <% end %>


 <% @ballparks.each do |ballpark| %>
  <tr>
    <td><%= ballpark.id %></td>
    <td><%= ballpark.name %></td>
    <td><%= link_to "編集", edit_admin_ballpark_path(ballpark) %></td>
    <td><%= link_to "削除", admin_ballpark_path(ballpark), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
  </tr>
 <% end %>